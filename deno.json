{
  "imports": {
    "std/": "https://deno.land/std@0.224.0/",
    "sqlite3": "https://deno.land/x/sqlite3@0.11.1/mod.ts"
  },
  "tasks": {
    "fragment": "deno run --allow-env --allow-ffi --unstable-ffi --allow-read --allow-write --allow-net",
    "fragments": "deno task fragment fragments/main.deno.ts",
    "test": "deno test --allow-env --allow-ffi --unstable-ffi --allow-read --allow-write --allow-net"
  },
  "lint": {
    "include": [
      "fragments/**/*.deno.ts",
      "fragments/**/*.deno.test.ts"
    ],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "lineWidth": 120,
    "include": [
      "fragments/**/*.deno.ts",
      "fragments/**/*.deno.test.ts"
    ]
  },
  "test": {
    "include": [
      "fragments/**/*.deno.test.ts"
    ]
  }
}