{
  "name": "ff",
  "version": "0.0.1",
  "author": "pjlangley",
  "license": "Unlicense",
  "engines": {
    "node": "^22",
    "npm": "^10"
  },
  "scripts": {
    "test": "tsx --env-file-if-exists=./solana_program_keys/solana_program_keys.env --test fragments/*/*.test.ts fragments/apis/**/*.test.ts",
    "lint": "deno lint",
    "tsc": "tsc --noEmit --project tsconfig.json",
    "format:write": "deno fmt",
    "format:check": "deno fmt --check",
    "api": "tsx --env-file-if-exists=./solana_program_keys/solana_program_keys.env ./fragments/api.ts",
    "api:dev": "tsx --env-file-if-exists=./solana_program_keys/solana_program_keys.env --watch ./fragments/api.ts",
    "api:dist": "node ./fragments/apis/fastify/dist/api.js",
    "api:build": "tsc --project tsconfig.api.json",
    "api:bru:fastify": "(cd ./fragments/apis/bruno && bru run -r --env-file ./environments/fastify.bru)",
    "api:bru:fastify:docker": "(cd ./fragments/apis/bruno && bru run -r --env-file ./environments/fastify.bru --env-var host=fastify)",
    "api:bru:axum": "(cd ./fragments/apis/bruno && bru run -r --env-file ./environments/axum.bru)",
    "api:bru:axum:docker": "(cd ./fragments/apis/bruno && bru run -r --env-file ./environments/axum.bru --env-var host=axum)",
    "api:bru:gin": "(cd ./fragments/apis/bruno && bru run -r --env-file ./environments/gin.bru)",
    "api:bru:gin:docker": "(cd ./fragments/apis/bruno && bru run -r --env-file ./environments/gin.bru --env-var host=gin)",
    "api:bru:fastapi": "(cd ./fragments/apis/bruno && bru run -r --env-file ./environments/fastapi.bru ./postgres ./redis)",
    "api:bru:fastapi:docker": "(cd ./fragments/apis/bruno && bru run -r --env-file ./environments/fastapi.bru --env-var host=fastapi ./postgres ./redis)"
  },
  "devDependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana-program/system": "^0.7.0",
    "@solana/codecs-core": "^3.0.0",
    "@solana/web3.js": "^1.98.2",
    "@tsconfig/node22": "^22.0.0",
    "@types/bn.js": "^5.2.0",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.10",
    "@usebruno/cli": "^2.12.0",
    "anchor-litesvm": "^0.1.2",
    "bn.js": "^5.2.2",
    "litesvm": "^0.1.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@solana/kit": "^2.1.0",
    "fastify": "^5.6.0",
    "pg": "^8.13.1",
    "redis": "^4.7.0",
    "sqlite3": "^5.1.7"
  }
}
